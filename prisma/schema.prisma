// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  password  String
  name  String
  city  String
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  published Boolean
  authorId  Int
}
